                                                                    <tbody>
                                                                    {% for topSupplier in topSuppliers %}
                                                                        <tr>
                                                                            <td>
                                                                                <a href="#"> {{ topSupplier.name }} </a>
                                                                            </td>
                                                                            <td> {{ topSupplier.qtyRepresentatives }} </td>
                                                                            <td> {{ topSupplier.qtyQuotes }} </td>
                                                                            <td>
                                                                                <a href="#" class="btn btn-sm btn-default">
