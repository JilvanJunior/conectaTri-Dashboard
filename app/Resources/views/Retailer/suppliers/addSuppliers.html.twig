{% extends 'Retailer/base.html.twig' %}

{% block title %}Adicionar Fornecedores{% endblock %}
{% block description %}{% endblock %}
{% block menu_suppliers %} active {% endblock %}

{% block page %}

    <div class="page-wrapper-row full-height">
        <div class="page-wrapper-middle">
            <!-- BEGIN CONTAINER -->
            <div class="page-container">
                <!-- BEGIN CONTENT -->
                <div class="page-content-wrapper">
                    <!-- BEGIN CONTENT BODY -->
                    <!-- BEGIN PAGE HEAD-->
                    <div class="page-head">
                        <div class="container">
                            <!-- BEGIN PAGE TITLE -->
                            <div class="page-title">
                                <h1>Fornecedores
                                    <small>adicionar fornecedor</small>
                                </h1>
                            </div>
                            <!-- END PAGE TITLE -->
                        </div>
                    </div>
                    <!-- END PAGE HEAD-->
                    <!-- BEGIN PAGE CONTENT BODY -->
                    <div class="page-content">
                        <div class="container">
                            {% include '_partial/flashMessages.html.twig' %}
                            <!-- BEGIN PAGE BREADCRUMBS -->
                            <ul class="page-breadcrumb breadcrumb">
                                <li>
                                    <a href="{{ path('dashboard') }}">Home</a>
                                    <i class="fa fa-circle"></i>
                                </li>
                                <li>
                                    <a href="{{ path('fornecedores') }}">Fornecedores</a>
                                    <i class="fa fa-circle"></i>
                                </li>
                                <li>
                                    <span>Adicionar Fornecedor</span>
                                </li>
                            </ul>
                            <!-- END PAGE BREADCRUMBS -->
                            <!-- BEGIN PAGE CONTENT INNER -->
                            <div class="page-content-inner">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="tabbable-line boxless tabbable-reversed">
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab_0">
                                                    <div class="portlet box green-conecta">
                                                        <div class="portlet-title">
                                                            <div class="caption">
                                                                <i class="fa fa-gift"></i>Adicionar Fornecedor</div>
                                                        </div>
                                                        <div class="portlet-body form">
                                                            <!-- BEGIN FORM-->
                                                            <form action="#" class="form-horizontal" method="POST">
                                                                <div class="form-body">
                                                                    <div class="form-group">
                                                                        <label class="col-md-3 control-label">Fornecedor*</label>
                                                                        <div class="col-md-4">
                                                                            <input type="text" name="name" class="form-control input-circle" placeholder="Fornecedor" required>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="col-md-3 control-label">CNPJ*</label>
                                                                        <div class="col-md-4">
                                                                            <input type="text" id="cnpj" name="cnpj" class="form-control input-circle" placeholder="CNPJ" required>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="col-md-3 control-label">Valor Mínimo</label>
                                                                        <div class="col-md-4">
                                                                            <input type="text" id="minimunValue" name="minimunValue" class="form-control input-circle" placeholder="Valor Mínimo">
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="col-md-3 control-label">Estado</label>
                                                                        <div class="col-md-4">
                                                                            <select name="state" class="form-control select-circle">
                                                                                <option value="" disabled selected>Selecione um Estado</option>
                                                                                {% for state in states %}
                                                                                    <option value="{{ state.id }}">{{ state.name }}</option>
                                                                                {% endfor %}
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="form-actions">
                                                                    <div class="row">
                                                                        <div class="col-md-offset-3 col-md-9">
                                                                            <button type="submit" class="btn btn-circle green-conecta">Adicionar</button>
                                                                            {#<button type="button" class="btn btn-circle grey-salsa btn-outline">Cancelar</button>#}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                            <!-- END FORM-->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END PAGE CONTENT INNER -->
                        </div>
                    </div>
                    <!-- END PAGE CONTENT BODY -->
                    <!-- END CONTENT BODY -->
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END CONTAINER -->
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ asset('assets/pages/scripts/jquery.mask.min.js') }}" type="text/javascript"></script>
    <script>
        $(function(){
            $('#cnpj').mask('00.000.000/0000-00');
        });
    </script>
{% endblock %}
