<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login ConectaTri</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link href='https://fonts.googleapis.com/css?family=Work+Sans:400,300,700' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <style>
        /* Base styles */
        *, *:after, *:before {
            box-sizing: border-box;
        }
        html {
            font-size: 100%;
            line-height: 1.5;
            height: 100%;
        }

        body {
            position: relative;
            margin: 0;
            font-family: 'Work Sans', Arial, Helvetica, sans-serif;
            min-height: 100%;
            background: #40AE40;
            color: #777;
        }
        img {
            vertical-align: middle;
            max-width: 100%;
        }
        button {
            cursor: pointer;
            border: 0;
            padding: 0;
            background-color: transparent;
        }
        a {
            color: #88D000;
        }

        /* Container */
        .container {
            position: absolute;
            width: 90%;
            max-width: 24em;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
            animation: intro .7s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }

        /* Profile Card */
        .profile {
            position: relative;
        }
        .profile--open {
            margin-top: 80px;
        }
        .profile--open .profile__logo {
            text-align: center;
        }
        .profile--open .profile__logo img {
            width: 220px;
            margin-bottom: 30px;
        }
        .profile--open .profile__form {
            display: block;
            height: auto;
            opacity: 1;
            padding-top: 5em;
            margin: 0 auto;
        }
        .profile--open .profile__fields {
            opacity: 1;
            display: block;
        }
        .profile--open .profile__avatar {
            transform: translate(-50%, -1.5em);
            border-radius: 50%;
        }
        .profile__form {
            position: relative;
            background: white;
            display: none;
            opacity: 0;
            height: 0;
            padding: 3em;
            border-radius: .25em;
            -webkit-filter: drop-shadow(0 0 2em rgba(0,0,0,0.2));
            transition:
                    opacity .4s ease-in-out,
                    height .4s ease-in-out,
                    transform .4s cubic-bezier(0.175, 0.885, 0.32, 1.275),
                    padding .4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .profile__fields {
            opacity: 0;
            display: none;
            transition: opacity .2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .profile__avatar {
            position: absolute;
            z-index: 1;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 1.25em;
            overflow: hidden;
            width: 4.5em;
            height: 4.5em;
            display: block;
            transition: transform .3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            will-change: transform;
        }
        .profile__avatar:focus {
            outline: 0;
        }
        .profile__footer {
            padding-top: 1em;
        }

        #toggleBtn {
            text-align: center;
        }

        #toggleBtn img {
            width: 220px;
            margin-bottom: 40px;
        }

        /* Form */
        .field {
            position: relative;
            margin-bottom: 2em;
        }
        .label {
            position: relative;
            height: 2rem;
            line-height: 2rem;
            bottom: 0;
            color: #999;
            transition: all .3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .input {
            width: 100%;
            font-size: 100%;
            border: 0;
            padding: 0;
            background-color: transparent;
            height: 2rem;
            line-height: 2rem;
            border-bottom: 1px solid #eee;
            color: #777;
            transition: all .2s ease-in;
        }
        .input:focus {
            outline: 0;
            border-color: #ccc;
        }

        /* Using required and a faux pattern to see if input has text from http://stackoverflow.com/questions/16952526/detect-if-an-input-has-text-in-it-using-css */
        .input:focus + .label,
        input:valid + .label {
            transform: translateY(-100%);
            font-size: 0.75rem;
            color: #ccc;
        }

        /* Button */
        .btn {
            border: 0;
            font-size: 0.75rem;
            height: 2.5rem;
            line-height: 2.5rem;
            padding: 0 1.5rem;
            color: white;
            background: #88D000;
            text-transform: uppercase;
            border-radius: .25rem;
            letter-spacing: .2em;
            transition: background .2s;
            margin-bottom: 10px;
        }
        .btn:focus {
            outline: 0;
        }
        .btn:hover,
        .btn:focus {
            background: #83BC3C;
        }


        /* Intro animation */
        @keyframes intro {
            from {
                opacity: 0;
                top: 0;
            }
            to {
                opacity: 1;
                top: 50%;
            }
        }
    </style>
</head>

<body>
<div class="container">
    <div id="toggleBtn">
        <img src="{{ asset('assets/pages/img/logos/bg-conectatri-03.png') }}" alt="ConectaTri">
        <button class="btn" id="toggleRetailer">
            Sou Varejista
        </button>
        <button class="btn" id="toggleRepresentative">
            Sou Fornecedor
        </button>
        {% if error %}
            <div style="color: white !important;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    <div class="retailer">
        <div class="profile__form">
            <div class="profile__logo">
                <img src="{{ asset('assets/pages/img/logos/bg-conectatri-04.png') }}" alt="ConectaTri">
            </div>
            <div class="profile__fields">
                <form id="retailer-form" action="{{ path('login') }}" method="post">
                    <div class="field">
                        <label for="username" class="label">CNPJ</label>
                        <input type="text" id="cnpj" name="_username" class="input" required pattern=.*\S.* />


                    </div>
                    <div class="field">

                        <label for="password" class="label">Senha</label>
                        <input type="password" id="password-retailer" name="_password" class="input" required pattern=.*\S.* />

                    </div>
                    <div class="profile__footer">
                        <button class="btn" id="toggleBackRetailer" type="button">Voltar</button>
                        <button class="btn" type="submit">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="representative">
        <div class="profile__form">
            <div class="profile__logo">
                <img src="{{ asset('assets/pages/img/logos/bg-conectatri-04.png?v1') }}" alt="ConectaTri">
            </div>
            <div class="profile__fields">
                <form action="{{ path('login') }}" method="post">

                    <div class="field">
                        <label for="username" class="label">E-mail</label>
                        <input type="text" id="username-representative" name="_username" class="input" required pattern=.*\S.* />

                    </div>
                    <div class="field">
                        <label for="password" class="label">Senha</label>
                        <input type="password" id="password-representative" name="_password" class="input" required pattern=.*\S.* />

                    </div>
                    <div>Primeiro acesso? <a href="{{ path('representative_user_registration') }}">Clique aqui</a></div>
                    <div><a href="{{ path('recover_password') }}">Esqueci minha senha</a></div>
                    <div class="profile__footer">
                        <button class="btn" id="toggleBackRepresentative" type="button">Voltar</button>
                        <button class="btn" type="submit">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('assets/global/plugins/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/pages/scripts/jquery.mask.min.js') }}" type="text/javascript"></script>
<script>
    /* Simple VanillaJS to toggle class */
    var toggleRetailer = function(){
        [].map.call(document.querySelectorAll('.retailer'), function(el) {
            el.classList.toggle('profile--open');
        });
    };
    var toggleRepresentative = function(){
        [].map.call(document.querySelectorAll('.representative'), function(el) {
            el.classList.toggle('profile--open');
        });
    };
    document.getElementById('toggleRetailer').addEventListener('click', function () {
        toggleRetailer();
        document.getElementById('toggleBtn').style.display = 'none';
    });

    document.getElementById('toggleRepresentative').addEventListener('click', function () {
        toggleRepresentative();
        document.getElementById('toggleBtn').style.display = 'none';
    });

    document.getElementById('toggleBackRetailer').addEventListener('click', function () {
        toggleRetailer();
        document.getElementById('toggleBtn').style.display = 'block';
    });

    document.getElementById('toggleBackRepresentative').addEventListener('click', function () {
        toggleRepresentative();
        document.getElementById('toggleBtn').style.display = 'block';
    });

    $(function(){
        $('#cnpj').mask('00.000.000/0000-00');

        $('#retailer-form').submit(function(){
            var input = $(this).find("input[name='_username']");
            var cnpj = input.val();
            cnpj = cnpj.replace(".", "");
            cnpj = cnpj.replace(".", "");
            cnpj = cnpj.replace("/", "");
            cnpj = cnpj.replace("-", "");
            input.val(cnpj);
        })
    });
</script>
</body>

</html>