{% extends 'Representative/base.html.twig' %}

{% block title %}Cotação{% endblock %}
{% block description %}{% endblock %}

{% block page_plugins %}
    <link href="{{ asset('assets/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page %}
    <div class="page-wrapper-row full-height">
        <div class="page-wrapper-middle">
            <!-- BEGIN CONTAINER -->
            <div class="page-container">
                <!-- BEGIN CONTENT -->
                <div class="page-content-wrapper">
                    <!-- BEGIN CONTENT BODY -->
                    <!-- BEGIN PAGE HEAD-->
                    <div class="page-head">
                        <div class="container">
                            <!-- BEGIN PAGE TITLE -->
                            <div class="page-title">
                                <h1>{{ quote.name }}
                                    <small>cotação</small>
                                </h1>
                            </div>
                            <!-- END PAGE TITLE -->
                        </div>
                    </div>
                    <!-- END PAGE HEAD-->
                    <!-- BEGIN PAGE CONTENT BODY -->
                    <div class="page-content">
                        <div class="container">
                            <!-- BEGIN PAGE CONTENT INNER -->
                            <div class="page-content-inner">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                        <div class="portlet light portlet-fit ">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="icon-settings font-red"></i>
                                                    <span class="caption-subject font-red sbold uppercase">Cotação</span>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="table-toolbar">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="btn-group pull-right">
                                                                <button class="btn green btn-outline dropdown-toggle" data-toggle="dropdown">Opções
                                                                    <i class="fa fa-angle-down"></i>
                                                                </button>
                                                                <ul class="dropdown-menu pull-right">
                                                                    <li>
                                                                        <a href="#"> Imprimir </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#"> Salvar como PDF </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#"> Exportar para Excel </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                                    <thead>
                                                    <tr>
                                                        <th> Produto </th>
                                                        <th> Marca </th>
                                                        <th> Descrição </th>
                                                        <th> Quantidade / Unidade </th>
                                                        <th> Preço </th>
                                                        <th> Quantidade </th>
                                                    </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- END EXAMPLE TABLE PORTLET-->
                                    </div>
                                </div>
                            </div>
                            <!-- END PAGE CONTENT INNER -->
                        </div>
                    </div>
                    <!-- END PAGE CONTENT BODY -->
                    <!-- END CONTENT BODY -->
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END CONTAINER -->
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ asset('assets/global/scripts/datatable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/pages/scripts/dataTables.editor.min.js') }}" type="text/javascript"></script>
    <script>
        (function($){

            $(document).ready(function() {

                var editor = new $.fn.dataTable.Editor( {
                    ajax: '{{ path('quote_representative_data', {'id': quote.id, 'email': email}) }}',
                    table: '#sample_editable_1',
                    idSrc:  'id',
                    fields: [
                        {
                            "name": "id",
                            "type": "hidden"
                        },
                        {
                            "label": "Produto",
                            "name": "name",
                            "type": "readonly"
                        },
                        {
                            "label": "Marca",
                            "name": "brand",
                            "type": "readonly"
                        },
                        {
                            "label": "Descrição",
                            "name": "description",
                            "type": "readonly"
                        },
                        {
                            "label": "Quantidade / Unidade",
                            "name": "quantity_unit",
                            "type": "readonly"
                        },
                        {
                            "label": "Preço",
                            "name": "price"
                        },
                        {
                            "label": "Quantidade",
                            "name": "quantity"
                        }
                    ]
                } );

                $('#sample_editable_1').on( 'click', 'tbody td.editable', function (e) {
                    editor.inline( this, {
                        onBlur: 'submit',
                        submit: 'allIfChanged'
                    } );
                } );

                var table = $('#sample_editable_1').DataTable( {
                    dom: 'Bfrtip',
                    ajax: '{{ path('quote_representative_data', {'id': quote.id, 'email': email}) }}',
                    columns: [
                        {
                            "data": "name"
                        },
                        {
                            "data": "brand"
                        },
                        {
                            "data": "description"
                        },
                        {
                            "data": "quantity_unit"
                        },
                        {
                            "data": "price", className: 'editable'
                        },
                        {
                            "data": "quantity", className: 'editable'
                        }
                    ],
                    select: true,
                    lengthChange: false,
                    buttons: [
                    ]
                } );
            } );

        }(jQuery));
    </script>
{% endblock %}