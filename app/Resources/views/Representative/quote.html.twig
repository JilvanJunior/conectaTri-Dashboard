{% extends 'Representative/base.html.twig' %}

{% block title %}Cotação{% endblock %}
{% block description %}{% endblock %}

{% block page_plugins %}
    {#<link href="{{ asset('assets/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />#}
    <link href="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page %}
    <div class="page-wrapper-row full-height">
        <div class="page-wrapper-middle">
            <!-- BEGIN CONTAINER -->
            <div class="page-container">
                <!-- BEGIN CONTENT -->
                <div class="page-content-wrapper">
                    <!-- BEGIN CONTENT BODY -->
                    <!-- BEGIN PAGE HEAD-->
                    <div class="page-head">
                        <div class="container">
                            <!-- BEGIN PAGE TITLE -->
                            <div class="page-title">
                                <h4 style="display: inline">
                                    <small>cotação</small>
                                    {{ quote.name }}
                                </h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <h4 style="display: inline">
                                    <small>varejista</small>
                                    {{ quote.retailer.fantasyName }}
                                </h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <h4 style="display: inline">
                                    <small>razão social</small>
                                    {{ quote.retailer.companyName }}
                                </h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <h4 style="display: inline">
                                    <small>validade</small>
                                    {{ quote.expiresAt|date("d/m/Y H:i") }}
                                </h4>
                            </div>
                            <!-- END PAGE TITLE -->
                        </div>
                    </div>
                    <!-- END PAGE HEAD-->
                    <!-- BEGIN PAGE CONTENT BODY -->
                    <div class="page-content">
                        <div class="container">
                            <!-- BEGIN PAGE CONTENT INNER -->
                            <div class="page-content-inner">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="m-heading-1 border-green-conecta m-bordered">
                                            Clique nos campos de quantidade e preço para editá-los.
                                        </div>
                                        <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                        <div class="portlet light portlet-fit ">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="icon-list font-red"></i>
                                                    <span class="caption-subject font-red sbold uppercase">Cotação</span>
                                                </div>
                                                <div class="tools">
                                                    {% if not isCompleted %}
                                                        <button id="button" class="btn btn-circle green-conecta pull-right">Encerrar Cotação</button>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                                    <thead>
                                                    <tr>
                                                        <th> Produto </th>
                                                        <th> Marca </th>
                                                        <th> Descrição </th>
                                                        <th> Embalagem de Compra </th>
                                                        <th> Quantidade </th>
                                                        <th> Preço </th>
                                                    </tr>
                                                    </thead>
                                                    <tfoot>
                                                    <tr>
                                                        <th> Produto </th>
                                                        <th> Marca </th>
                                                        <th> Descrição </th>
                                                        <th> Embalagem de Compra </th>
                                                        <th> Quantidade </th>
                                                        <th> Preço </th>
                                                    </tr>
                                                    </tfoot>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- END EXAMPLE TABLE PORTLET-->
                                    </div>
                                </div>
                            </div>
                            <!-- END PAGE CONTENT INNER -->
                        </div>
                    </div>
                    <!-- END PAGE CONTENT BODY -->
                    <!-- END CONTENT BODY -->
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END CONTAINER -->
        </div>
    </div>
{% endblock %}

{% block script %}
    {#<script src="{{ asset('assets/global/scripts/datatable.js') }}" type="text/javascript"></script>#}
    <script src="{{ asset('assets/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/pages/scripts/dataTables.editor.min.js') }}" type="text/javascript"></script>
    <script>
        (function($){

            $(document).ready(function() {

                var table = $('#sample_editable_1').DataTable( {
                    language: {
                        url: "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Portuguese-Brasil.json"
                    },
                    ajax: '{{ path('quote_representative_data', {'quoteId': quote.id, 'representativeId': representative.id}) }}',
                    columns: [
                        {
                            "data": "name"
                        },
                        {
                            "data": "brand"
                        },
                        {
                            "data": "description"
                        },
                        {
                            "data": "quantity_unit"
                        },
                        {
                            "data": "quantity", className: 'editable'
                        },
                        {
                            "data": "price", className: 'editable'
                        }
                    ],
                    lengthChange: false,
                    buttons: [
                    ]
                } );

                {% if not isCompleted %}
                var editor = new $.fn.dataTable.Editor( {
                    ajax: '{{ path('quote_representative_data', {'quoteId': quote.id, 'representativeId': representative.id}) }}',
                    table: '#sample_editable_1',
                    idSrc:  'id',
                    fields: [
                        {
                            "name": "id",
                            "type": "hidden"
                        },
                        {
                            "label": "Produto",
                            "name": "name",
                            "type": "readonly"
                        },
                        {
                            "label": "Marca",
                            "name": "brand",
                            "type": "readonly"
                        },
                        {
                            "label": "Descrição",
                            "name": "description",
                            "type": "readonly"
                        },
                        {
                            "label": "Embalagem de Compra",
                            "name": "quantity_unit",
                            "type": "readonly"
                        },
                        {
                            "label": "Quantidade",
                            "name": "quantity"
                        },
                        {
                            "label": "Preço",
                            "name": "price"
                        }
                    ]
                } );

                $('#sample_editable_1').on( 'click', 'tbody td.editable', function (e) {
                    editor.inline( this, {
                        onBlur: 'submit',
                        submit: 'allIfChanged'
                    } );
                } );
                {% endif %}

                $('#button').click( function () {

                    $.ajax({
                        type: "POST",
                        url: "{{ path('end_quote_representative', {'quoteId': quote.id, 'representativeId': representative.id}) }}",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function(data) {
                            window.location.href = data['url'];
                        },
                        error: function() {
                            alert("Um problema ocorreu ao encerrar a cotação.");
                        }
                    });
                } );
            } );

        }(jQuery));
    </script>
{% endblock %}